datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Ticket {
  createdAt DateTime @default(now())
  deletedAt String?
  httt      String?
  id        String   @id @default(cuid())
  nom       String   @unique
  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?
  updatedAt DateTime @updatedAt
}

model Project {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  nom       String   @unique
  tickets   Ticket[]
  updatedAt DateTime @updatedAt
}